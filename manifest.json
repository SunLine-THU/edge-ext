{
    "name": "闪念胶囊!",
    "version": "1.0",
    "description": "记录Edge的浏览瞬间",
    "manifest_version": 3,
    "background": {
        "service_worker": "./js/background.js"
    },
    "action": {
        "default_icon": "./assets/icon.png",
        "default_popup": "popup.html"
    },
    "permissions": [
        "notifications",
        "contextMenus"
    ]
}
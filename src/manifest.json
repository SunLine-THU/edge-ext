{
    "name": "闪念胶囊!",
    "version": "1.0",
    "description": "记录Edge的浏览瞬间",
    "manifest_version": 3,
    "icons": {
        "16": "assets/icon.png",
        "48": "assets/icon.png",
        "64": "assets/icon.png",
        "128": "assets/icon.png"
    },
    "background": {
        "service_worker": "js/background.js"
    },
    "action": {
        "default_icon": "assets/icon.png",
        "default_popup": "popup.html"
    },
    "content_scripts": [
        {
            "matches": [
                "http://*/*",
                "https://*/*"
            ],
            "js": [
                "js/content.js"
            ]
        }
    ],
    "permissions": [
        "notifications",
        "contextMenus"
    ]
}